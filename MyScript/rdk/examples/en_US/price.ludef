name =        (euro|dollar|pound|yen)(s?|(\(s\))?)
name = {name}|pound(s?|(\(s\))?) sterling

iso = EUR|USD|US\$|GBP|JPY
symbol = [А\$ге]

d09 = [0-9]
d19 = [1-9]
integer = 0|{d19}{d09}?{d09}?(,?{d09}{d09}{d09})*

dec1 / 80 = {d09}{d09}
dec2 / 20 = {d09}+
decimal = {dec1}|{dec2}

real = {integer}(\.{decimal})?

left = ({iso}|{symbol}) ?{real}
middle = {integer} {name} {decimal}
right = {real} {name}

price = {left}|{middle}|{right}|{real}

{price}
