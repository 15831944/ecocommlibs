domain = {d1}|{d2}|{d3}|{d4}|{d5}|{d6}|{d7}|{d8}|{d9}|{d10}|{d11}|{d12}|{d13}|{d14}|{d15}
domain = {domain}|{d16}|{d17}|{d18}|{d19}|{d20}|{d21}
domain = {domain}|{element}(\.{element})*\.{suffix}

user = {element}(\.{element})*

email = {user}\.?@{domain}

