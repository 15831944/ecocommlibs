element = [0-9a-zA-Z][-_0-9a-zA-Z]*

s1 / 50 = org
s2 / 45 = com
s3 / 40 = cn
s4 / 35 = cc
s5 / 30 = net
s6 / 25 = tw
s7 / 20 = hk
